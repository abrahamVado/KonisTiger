{
  "name": "yamato-electron-static-auth",
  "version": "1.1.0",
  "private": true,
  "description": "Electron static runner for Yamato with local auth backend (better-sqlite3) and prebuild-friendly config.",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps && bash scripts/check-native.sh || echo 'check-native skipped on non-Unix'",
    "rebuild": "electron-builder install-app-deps"
  },
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "bcryptjs": "^2.4.3",
    "electron-store": "^9.0.0",
    "jsonwebtoken": "^9.0.2",
    "nanoid": "^5.0.7",
    "simple-git": "^3.24.0"
  },
  "devDependencies": {
    "electron": "30.0.0",
    "electron-builder": "24.13.3"
  },
  "build": {
    "appId": "com.abraham.yamato.staticauth",
    "productName": "Yamato Static (with Auth)",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "src/**",
      "scripts/**",
      "package.json"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "nodeGypRebuild": false,
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Development"
    }
  }
}